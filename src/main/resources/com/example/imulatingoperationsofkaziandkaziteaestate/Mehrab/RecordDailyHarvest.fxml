<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="262.0" prefWidth="607.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.imulatingoperationsofkaziandkaziteaestate.Mehrab.RecordDailyHarvestController">
<children>
    <Label layoutX="30" layoutY="20" text="Date:" />
    <DatePicker fx:id="harvestDatePicker" layoutX="100" layoutY="15" />

    <Label layoutX="30" layoutY="60" text="Product:" />
    <ComboBox fx:id="productComboBox" layoutX="100" layoutY="55" prefWidth="200" />

    <Label layoutX="30" layoutY="100" text="Quantity:" />
    <TextField fx:id="quantityField" layoutX="100" layoutY="95" />

    <Button fx:id="recordButton" layoutX="100" layoutY="140" text="Record Harvest" />

    <TableView fx:id="harvestTable" layoutX="330" layoutY="15" prefHeight="200" prefWidth="243.0">
        <columns>
            <TableColumn fx:id="dateColumn" text="Date" />
            <TableColumn fx:id="productColumn" text="Product" />
            <TableColumn fx:id="quantityColumn" text="Quantity" />
        </columns>
    </TableView>
</children>
</AnchorPane>
