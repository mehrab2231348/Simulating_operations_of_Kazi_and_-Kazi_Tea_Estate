<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="470.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Simulatingoperationsofkaziandkaziteaestate.Mehrab.MonthlySalesTrendReportController">
    <children>
        <Label layoutX="25.0" layoutY="58.0" text="Month:" />

        <ComboBox fx:id="monthComboBox" layoutX="73.0" layoutY="53.0" prefWidth="150.0" />

        <Button layoutX="245.0" layoutY="53.0" onAction="#generateOnClicked" text="Generate Report" />
        <Button layoutX="365.0" layoutY="53.0" onAction="#submitOnClicked" text="Submit to Manager" />

        <TableView fx:id="trendTableView" layoutX="90.0" layoutY="97.0" prefHeight="350" prefWidth="328.0">
            <columns>
                <TableColumn fx:id="dateColumn" text="Date" />
                <TableColumn fx:id="productColumn" text="Product" />
                <TableColumn fx:id="quantityColumn" prefWidth="98.0" text="Quantity Sold" />
                <TableColumn fx:id="revenueColumn" prefWidth="69.0" text="Revenue" />
            </columns>
        </TableView>

        <Label layoutX="162.0" layoutY="14.0" text="Monthly Sales Report">
            <font>
                <Font name="Arial Bold" size="18.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
