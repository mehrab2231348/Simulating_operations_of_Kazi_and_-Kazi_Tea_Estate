<AnchorPane prefHeight="485.0" prefWidth="552.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Simulatingoperationsofkaziandkaziteaestate.Mehrab.SalesReportController">
    <children>
        <Label layoutX="24.0" layoutY="55.0" text="Start Date:" />
        <DatePicker fx:id="startDatePicker" layoutX="104.0" layoutY="50.0" />

        <Label layoutX="294.0" layoutY="55.0" text="End Date:" />
        <DatePicker fx:id="endDatePicker" layoutX="364.0" layoutY="50.0" />

        <Label layoutX="24.0" layoutY="95.0" text="Category:" />
        <TextField fx:id="categoryTextField" layoutX="104.0" layoutY="90.0" />

        <Label layoutX="294.0" layoutY="95.0" text="Region:" />
        <TextField fx:id="regionTextField" layoutX="364.0" layoutY="90.0" />

        <Button layoutX="104.0" layoutY="133.0" onAction="#filterOnClicked" prefHeight="25.0" prefWidth="140.0" text="Filter" />
        <Button layoutX="302.0" layoutY="133.0" onAction="#exportOnClicked" prefHeight="25.0" prefWidth="149.0" text="Export Report" />

        <TableView fx:id="salesTableView" layoutX="24.0" layoutY="171.0" prefHeight="300" prefWidth="483.0">
            <columns>
                <TableColumn fx:id="dateColumn" text="Date" />
                <TableColumn fx:id="productColumn" text="Product" />
                <TableColumn fx:id="categoryColumn" text="Category" />
                <TableColumn fx:id="regionColumn" text="Region" />
                <TableColumn fx:id="quantityColumn" text="Quantity" />
                <TableColumn fx:id="totalColumn" text="Total Sale" />
            </columns>
        </TableView>

        <Label layoutX="221.0" layoutY="20.0" text="Sales Report">
            <font>
                <Font name="Arial Bold" size="18.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
